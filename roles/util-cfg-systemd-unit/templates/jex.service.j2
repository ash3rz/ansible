[Unit]
Description=The JEX submits jobs to Condor for the DE.
Wants=condor.service

[Service]
User=condor
ExecStart=/usr/local/bin/jex -cp /usr/local/lib/jex/jex-standalone.jar:/usr/local/lib/jex/ jex.core --config {{ de_config_dir }}/jex.properties
Restart=on-failure
StartLimitInterval=60s
StartLimitBurst=3

SyslogIdentifier=jex
SyslogFacility={{systemd.syslogFacility}}

[Install]
WantedBy={{systemd.target}}
